<script>
document.addEventListener("DOMContentLoaded", () => {
    // Elementos principales
    const categoriaForm = document.getElementById("categoriaForm");
    const productoForm = document.getElementById("productoForm");
    const categoriasContainer = document.getElementById("categorias");
    const categoriaModal = new bootstrap.Modal(document.getElementById('categoriaModal'));
    const productoModal = new bootstrap.Modal(document.getElementById('productoModal'));
    const categoriaProductoSelect = document.getElementById("categoriaProducto");
    const btnEliminarCategoria = document.getElementById("btnEliminarCategoria");
    const btnEliminarProducto = document.getElementById("btnEliminarProducto");
    
    // Variables de estado
    let editingCategoria = null;
    let editingProducto = null;
    let categoriaSeleccionada = null;

    // Cargar categorías al iniciar
    cargarCategorias();

    // Evento para agregar/editar categoría
    categoriaForm.addEventListener("submit", (event) => {
        event.preventDefault();

        const nombre = document.getElementById("nombreCategoria").value.trim();
        const categoriaIdOriginal = document.getElementById("categoriaId").value; // id original (oculto)
        const categoriaIdNuevo = nombre.toLowerCase().replace(/\s+/g, '-');

        if (!nombre) {
            Swal.fire({
                title: 'Error',
                text: 'Por favor ingresa un nombre para la categoría',
                icon: 'error',
                confirmButtonText: 'Entendido'
            });
            return;
        }

        let categorias = JSON.parse(localStorage.getItem('categorias')) || [];
        const categoriaExistente = categorias.find(c => c.id === categoriaIdNuevo);

        // Si es edición
        if (categoriaIdOriginal) {
            // Si el id cambió y ya existe otra categoría con ese id, error
            if (categoriaIdOriginal !== categoriaIdNuevo && categoriaExistente) {
                Swal.fire({
                    title: 'Nombre ocupado',
                    text: 'Ya existe una categoría con ese nombre. Por favor elige otro.',
                    icon: 'warning',
                    confirmButtonText: 'Entendido'
                });
                return;
            }

            // Actualizar categoría
            const index = categorias.findIndex(c => c.id === categoriaIdOriginal);
            if (index >= 0) {
                categorias[index] = { id: categoriaIdNuevo, nombre: nombre };
            }

            // Si el id cambió, actualiza los productos relacionados
            if (categoriaIdOriginal !== categoriaIdNuevo) {
                let productos = JSON.parse(localStorage.getItem('productos')) || [];
                productos.forEach(p => {
                    if (p.categoriaId === categoriaIdOriginal) {
                        p.categoriaId = categoriaIdNuevo;
                    }
                });
                localStorage.setItem('productos', JSON.stringify(productos));
            }
        } else {
            // Si es nueva y ya existe, error
            if (categoriaExistente) {
                Swal.fire({
                    title: 'Nombre ocupado',
                    text: 'Ya existe una categoría con ese nombre. Por favor elige otro.',
                    icon: 'warning',
                    confirmButtonText: 'Entendido'
                });
                return;
            }
            categorias.push({ id: categoriaIdNuevo, nombre: nombre });
        }

        localStorage.setItem('categorias', JSON.stringify(categorias));
        categoriaForm.reset();
        categoriaModal.hide();

        const message = categoriaIdOriginal ? 'Categoría actualizada' : 'Categoría agregada';
        Swal.fire({
            title: '¡Éxito!',
            text: `${message} correctamente`,
            icon: 'success',
            timer: 1500,
            timerProgressBar: true,
            showConfirmButton: false
        });

        cargarCategorias();
    });

    // Evento para eliminar categoría
    btnEliminarCategoria.addEventListener("click", () => {
        Swal.fire({
            title: '¿Eliminar categoría?',
            html: `¿Estás seguro de eliminar la categoría <strong>${editingCategoria.nombre}</strong> y todos sus productos?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                eliminarCategoria(editingCategoria.id);
                categoriaModal.hide();
                
                Swal.fire({
                    title: '¡Eliminada!',
                    text: 'La categoría y sus productos han sido eliminados',
                    icon: 'success',
                    timer: 1500,
                    timerProgressBar: true
                });
            }
        });
    });

    // Evento para eliminar producto (asegúrate de tener editingProducto actualizado)
    btnEliminarProducto.addEventListener("click", () => {
        Swal.fire({
            title: '¿Eliminar producto?',
            html: `¿Estás seguro de eliminar el producto <strong>${editingProducto.nombre}</strong>?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                eliminarProducto(editingProducto.id);
                productoModal.hide();
                Swal.fire({
                    title: '¡Eliminado!',
                    text: 'El producto ha sido eliminado',
                    icon: 'success',
                    timer: 1500,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
                // Actualiza la lista en tiempo real
                actualizarProductosDeCategoria(editingProducto.categoriaId);
            }
        });
    });

    // Evento para agregar/editar producto
    productoForm.addEventListener("submit", async (event) => {
        event.preventDefault();

        const categoriaId = document.getElementById("productoCategoriaId").value;
        const nombre = document.getElementById("nombreProducto").value.trim();
        const precio = parseFloat(document.getElementById("precioProducto").value);
        const imagenInput = document.getElementById("imagenProducto");
        const productoId = document.getElementById("productoId").value;

        let imagenURL = "https://via.placeholder.com/150";
        if (imagenInput.files.length > 0) {
            imagenURL = await fileToBase64(imagenInput.files[0]);
        } else if (editingProducto && editingProducto.imagenURL) {
            imagenURL = editingProducto.imagenURL;
        }

        if (!nombre) {
            Swal.fire({
                title: 'Error',
                text: 'Por favor ingresa un nombre para el producto',
                icon: 'error',
                confirmButtonText: 'Entendido'
            });
            return;
        }

        if (isNaN(precio) || precio <= 0) {
            Swal.fire({
                title: 'Error',
                text: 'Por favor ingresa un precio válido',
                icon: 'error',
                confirmButtonText: 'Entendido'
            });
            return;
        }

        // Control de unicidad de producto
        let productos = JSON.parse(localStorage.getItem('productos')) || [];
        const productoIdFinal = productoId || nombre.toLowerCase().replace(/\s+/g, '-');
        const productoExistente = productos.find(p => p.id === productoIdFinal);

        // Si es nuevo (no edición) y ya existe, alerta
        if (!productoId && productoExistente) {
            Swal.fire({
                title: 'Nombre ocupado',
                text: 'Ya existe un producto con ese nombre. Por favor elige otro.',
                icon: 'warning',
                confirmButtonText: 'Entendido'
            });
            return;
        }

        const producto = {
            id: productoIdFinal,
            categoriaId: categoriaId,
            nombre: nombre,
            precio: precio.toFixed(2),
            imagenURL: imagenURL
        };

        guardarProducto(producto);
        productoForm.reset();
        productoModal.hide();
        imagenInput.value = '';
        actualizarProductosDeCategoria(categoriaId);

        const message = productoId ? 'Producto actualizado' : 'Producto agregado';
        Swal.fire({
            title: '¡Éxito!',
            text: `${message} correctamente`,
            icon: 'success',
            timer: 1500,
            timerProgressBar: true,
            showConfirmButton: false
        });

        // Actualizar productos de la categoría
        actualizarProductosDeCategoria(producto.categoriaId);
    });

    // Función para guardar categoría
    function guardarCategoria(categoria) {
        let categorias = JSON.parse(localStorage.getItem('categorias')) || [];
        
        // Si es edición, reemplazar
        const index = categorias.findIndex(c => c.id == categoria.id);
        if (index >= 0) {
            categorias[index] = categoria;
        } else {
            categorias.push(categoria);
        }
        
        localStorage.setItem('categorias', JSON.stringify(categorias));
        cargarCategorias();
    }

    // Función para guardar producto
    function guardarProducto(producto) {
        let productos = JSON.parse(localStorage.getItem('productos')) || [];
        
        // Si es edición, reemplazar
        const index = productos.findIndex(p => p.id == producto.id);
        if (index >= 0) {
            productos[index] = producto;
        } else {
            productos.push(producto);
        }
        
        localStorage.setItem('productos', JSON.stringify(productos));
        cargarCategorias();
    }

    // Función para cargar categorías con sus productos
    function cargarCategorias() {
        const categorias = JSON.parse(localStorage.getItem('categorias')) || [];
        const productos = JSON.parse(localStorage.getItem('productos')) || [];
        
        categoriasContainer.innerHTML = '';
        
        if (categorias.length === 0) {
            categoriasContainer.innerHTML = `
                <div class="alert alert-info w-100">
                    No hay categorías creadas. Agrega una categoría para comenzar.
                </div>
            `;
            return;
        }
        
        categorias.forEach(categoria => {
            // Usar nombre normalizado como id
            const categoriaId = categoria.id;
            const categoriaCardId = `categoria-${categoriaId}`;
            const editBtnId = `edit-categoria-${categoriaId}`;
            const deleteBtnId = `delete-categoria-${categoriaId}`;

            const categoriaCard = document.createElement("div");
            categoriaCard.id = categoriaCardId;
            categoriaCard.classList.add("categoria-card");

            // Obtener productos de esta categoría
            const productosCategoria = productos.filter(p => p.categoriaId == categoriaId);

            categoriaCard.innerHTML = `
                <div class="categoria-header" id="header-${categoriaId}">
                    <h3 class="categoria-title" id="title-${categoriaId}">${categoria.nombre}</h3>
                    <div class="categoria-actions" id="actions-${categoriaId}">
                        <button class="btn btn-info" id="${editBtnId}" data-id="${categoriaId}">Editar</button>
                        <button class="btn btn-danger" id="${deleteBtnId}" data-id="${categoriaId}">Eliminar</button>
                    </div>
                </div>
                <div class="productos-container" id="productos-${categoriaId}">
                    ${productosCategoria.length === 0 ? 
                      '<p class="text-muted">No hay productos en esta categoría</p>' : 
                      productosCategoria.map(producto => {
                        const productoCardId = `producto-${producto.id}`;
                        const editProdBtnId = `edit-producto-${producto.id}`;
                        const deleteProdBtnId = `delete-producto-${producto.id}`;
                        return `
                            <div class="producto-card" id="${productoCardId}" data-id="${producto.id}">
                                <img src="${producto.imagenURL}" class="producto-img" alt="${producto.nombre}">
                                <div class="producto-body" id="body-${producto.id}">
                                    <h5 class="producto-title" id="title-prod-${producto.id}">${producto.nombre}</h5>
                                    <div class="producto-precio" id="precio-prod-${producto.id}">$${producto.precio}</div>
                                    <div class="producto-actions" id="actions-prod-${producto.id}">
                                        <button class="btn btn-info" id="${editProdBtnId}" data-id="${producto.id}">Editar</button>
                                        <button class="btn btn-danger" id="${deleteProdBtnId}" data-id="${producto.id}">Eliminar</button>
                                    </div>
                                </div>
                            </div>
                        `;
                      }).join('')}
                </div>
            `;

            categoriasContainer.appendChild(categoriaCard);

            // Eventos para botones de categoría
            document.getElementById(editBtnId).addEventListener('click', () => {
                editarCategoria(categoriaId);
            });

            document.getElementById(deleteBtnId).addEventListener('click', (e) => {
                e.stopPropagation();
                Swal.fire({
                    title: '¿Eliminar categoría?',
                    html: `¿Estás seguro de eliminar la categoría <strong>${categoria.nombre}</strong> y todos sus productos?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        eliminarCategoria(categoriaId);
                        Swal.fire({
                            title: '¡Eliminada!',
                            text: 'La categoría y sus productos han sido eliminados',
                            icon: 'success',
                            timer: 1500,
                            timerProgressBar: true
                        });
                    }
                });
            });

            // Eventos para productos
            productosCategoria.forEach(producto => {
                const editProdBtnId = `edit-producto-${producto.id}`;
                const deleteProdBtnId = `delete-producto-${producto.id}`;

                document.getElementById(editProdBtnId).addEventListener('click', (e) => {
                    e.stopPropagation();
                    editarProducto(producto.id);
                });

                document.getElementById(deleteProdBtnId).addEventListener('click', (e) => {
                    e.stopPropagation();
                    Swal.fire({
                        title: '¿Eliminar producto?',
                        html: `¿Estás seguro de eliminar el producto <strong>${producto.nombre}</strong>?`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar',
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            eliminarProducto(producto.id);
                            Swal.fire({
                                title: '¡Eliminado!',
                                text: 'El producto ha sido eliminado',
                                icon: 'success',
                                timer: 1500,
                                timerProgressBar: true
                            });
                        }
                    });
                });
            });
        });
        
        // Actualizar select de categorías en el modal de producto
        actualizarSelectCategorias();
    }

    // Función para actualizar el select de categorías
    function actualizarSelectCategorias() {
        const categorias = JSON.parse(localStorage.getItem('categorias')) || [];
        categoriaProductoSelect.innerHTML = '<option value="" selected disabled>Seleccione una categoría</option>';
        
        categorias.forEach(categoria => {
            const option = document.createElement('option');
            option.value = categoria.id;
            option.textContent = categoria.nombre;
            categoriaProductoSelect.appendChild(option);
        });
    }

    // Función para editar categoría
    function editarCategoria(id) {
        const categorias = JSON.parse(localStorage.getItem('categorias')) || [];
        const categoria = categorias.find(c => c.id == id);
        
        if (categoria) {
            editingCategoria = categoria;
            document.getElementById("categoriaModalLabel").textContent = "Editar Categoría";
            document.getElementById("categoriaId").value = categoria.id;
            document.getElementById("nombreCategoria").value = categoria.nombre;
            btnEliminarCategoria.style.display = 'block';
            categoriaModal.show();
        }
    }

    // Función para eliminar categoría
    function eliminarCategoria(id) {
        // Eliminar del localStorage
        let categorias = JSON.parse(localStorage.getItem('categorias')) || [];
        categorias = categorias.filter(categoria => categoria.id != id);
        localStorage.setItem('categorias', JSON.stringify(categorias));
        
        // Eliminar productos asociados
        let productos = JSON.parse(localStorage.getItem('productos')) || [];
        productos = productos.filter(producto => producto.categoriaId != id);
        localStorage.setItem('productos', JSON.stringify(productos));
        
        // Recargar vista
        cargarCategorias();
    }

    // Función para editar producto
    function editarProducto(id) {
        const productos = JSON.parse(localStorage.getItem('productos')) || [];
        const producto = productos.find(p => p.id == id);

        if (producto) {
            editingProducto = producto;
            document.getElementById("productoModalLabel").textContent = "Editar Producto";
            document.getElementById("productoId").value = producto.id;
            document.getElementById("productoCategoriaId").value = producto.categoriaId;
            // Quita esta línea porque ya no existe el select:
            // document.getElementById("categoriaProducto").value = producto.categoriaId;
            document.getElementById("nombreProducto").value = producto.nombre;
            document.getElementById("precioProducto").value = producto.precio;
            btnEliminarProducto.style.display = 'block';
            productoModal.show();
        }
    }

    // Función para eliminar producto
    window.eliminarProducto = function(id) {
        const productos = JSON.parse(localStorage.getItem('productos')) || [];
        const producto = productos.find(p => p.id == id);

        if (!producto) return;

        Swal.fire({
            title: '¿Eliminar producto?',
            html: `¿Estás seguro de eliminar el producto <strong>${producto.nombre}</strong>?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // Eliminar del localStorage
                let productos = JSON.parse(localStorage.getItem('productos')) || [];
                productos = productos.filter(producto => producto.id != id);
                localStorage.setItem('productos', JSON.stringify(productos));
                actualizarProductosDeCategoria(producto.categoriaId);

                Swal.fire({
                    title: '¡Eliminado!',
                    text: 'El producto ha sido eliminado',
                    icon: 'success',
                    timer: 1500,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
            }
        });
    }

    // Convertir archivo a base64
    function fileToBase64(file) {
        return new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.onload = () => resolve(reader.result);
            reader.onerror = reject;
            reader.readAsDataURL(file);
        });
    }

    // Mostrar mensaje de bienvenida al cargar
    Swal.fire({
        title: 'Inventario de Productos',
        text: 'Bienvenido al sistema de gestión de inventario',
        icon: 'info',
        timer: 2000,
        timerProgressBar: true,
        showConfirmButton: false
    });

    // Cargar categorías en sidebar y seleccionar la primera por defecto
    function cargarSidebarCategorias() {
        const categorias = JSON.parse(localStorage.getItem('categorias')) || [];
        const sidebar = document.getElementById('sidebarCategorias');
        sidebar.innerHTML = '';

        if (categorias.length === 0) {
            sidebar.innerHTML = '<li class="list-group-item text-muted">No hay categorías</li>';
            document.getElementById('tituloCategoriaSeleccionada').textContent = 'Selecciona una categoría';
            document.getElementById('btnAgregarProducto').style.display = 'none';
            document.getElementById('productosCategoriaSeleccionada').innerHTML = '';
            return;
        }

        categorias.forEach((cat, idx) => {
            const li = document.createElement('li');
            li.className = 'list-group-item list-group-item-action' + (categoriaSeleccionada === cat.id || (!categoriaSeleccionada && idx === 0) ? ' active' : '');
            li.textContent = cat.nombre;
            li.style.cursor = 'pointer';
            li.onclick = () => seleccionarCategoria(cat.id);
            sidebar.appendChild(li);
        });

        // Selecciona la primera si no hay selección
        if (!categoriaSeleccionada && categorias.length > 0) {
            seleccionarCategoria(categorias[0].id);
        }
    }

    // Seleccionar una categoría y mostrar sus productos
    function seleccionarCategoria(catId) {
        categoriaSeleccionada = catId;
        cargarSidebarCategorias();

        const categorias = JSON.parse(localStorage.getItem('categorias')) || [];
        const productos = JSON.parse(localStorage.getItem('productos')) || [];
        const cat = categorias.find(c => c.id === catId);

        document.getElementById('tituloCategoriaSeleccionada').textContent = cat ? cat.nombre : 'Selecciona una categoría';
        document.getElementById('btnAgregarProducto').style.display = cat ? 'inline-block' : 'none';

        const productosCat = productos.filter(p => p.categoriaId === catId);
        const contenedor = document.getElementById('productosCategoriaSeleccionada');
        contenedor.innerHTML = '';

        if (productosCat.length === 0) {
            contenedor.innerHTML = '<div class="alert alert-info">No hay productos en esta categoría.</div>';
            return;
        }

        productosCat.forEach(producto => {
            const card = document.createElement('div');
            card.className = 'producto-card';
            card.innerHTML = `
                <img src="${producto.imagenURL}" class="producto-img" alt="${producto.nombre}">
                <div class="producto-body">
                    <h5 class="producto-title">${producto.nombre}</h5>
                    <div class="producto-precio">$${producto.precio}</div>
                    <div class="producto-actions">
                        <button class="btn btn-info" onclick="editarProducto('${producto.id}')">Editar</button>
                        <button class="btn btn-danger" onclick="eliminarProducto('${producto.id}')">Eliminar</button>
                    </div>
                </div>
            `;
            contenedor.appendChild(card);
        });
    }

    // Modifica cargarCategorias para solo actualizar sidebar y productos
    function cargarCategorias() {
        cargarSidebarCategorias();
    }

    // Modifica el botón de agregar producto para asignar la categoría seleccionada
    document.getElementById('btnAgregarProducto').addEventListener('click', () => {
        if (categoriaSeleccionada) {
            document.getElementById('productoCategoriaId').value = categoriaSeleccionada;
        }
    });

    window.editarProducto = editarProducto;
    window.eliminarProducto = eliminarProducto;

    function actualizarProductosDeCategoria(catId) {
        const productos = JSON.parse(localStorage.getItem('productos')) || [];
        const productosCat = productos.filter(p => p.categoriaId === catId);
        const contenedor = document.getElementById('productosCategoriaSeleccionada');
        contenedor.innerHTML = '';

        if (productosCat.length === 0) {
            contenedor.innerHTML = '<div class="alert alert-info">No hay productos en esta categoría.</div>';
            return;
        }

        productosCat.forEach(producto => {
            const card = document.createElement('div');
            card.className = 'producto-card';
            card.innerHTML = `
                <img src="${producto.imagenURL}" class="producto-img" alt="${producto.nombre}">
                <div class="producto-body">
                    <h5 class="producto-title">${producto.nombre}</h5>
                    <div class="producto-precio">$${producto.precio}</div>
                    <div class="producto-actions">
                        <button class="btn btn-info" onclick="editarProducto('${producto.id}')">Editar</button>
                        <button class="btn btn-danger" onclick="eliminarProducto('${producto.id}')">Eliminar</button>
                    </div>
                </div>
            `;
            contenedor.appendChild(card);
        });
    }
});
