<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Ventas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            width: 350px;
            background: #2c3e50;
            color: white;
            padding: 15px;
            height: calc(100vh - 56px);
            overflow-y: auto;
            position: fixed;
            right: 0;
            top: 56px;
            z-index: 1000;
        }

        .main-container {
            display: flex;
            height: calc(100vh - 60px);
            padding-right: 350px;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
        }

        .categorias-container, .producto-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-top: 20px;
        }

        .categoria-card, .card {
            width: 250px;
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .card {
            flex-direction: column;
            height: auto;
            padding: 10px;
        }

        .btn-content {
            position: fixed;
            bottom: 30px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .btn-categoria { left: 30px; }
        .btn-producto { right: 30px; }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        @media (max-width: 810px) {
            .sidebar {
                width: 100%;
                height: 50vh;
                top: auto;
                bottom: 0;
            }
            .main-container {
                padding-right: 0;
                padding-bottom: 50vh;
            }
        }

        .table-hover tbody tr:hover {
            background-color: #3d5166;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <span class="navbar-brand">Sistema de Ventas</span>
        </div>
    </nav>

    <main class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4 class="text-center">Productos Seleccionados</h4>
            <hr>
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="selectedProducts">
                        <tr id="emptyMessage">
                            <td colspan="5" class="text-center">No hay productos seleccionados</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="sidebar-footer">
                <hr>
                <h5>Total: $<span id="totalAmount">0.00</span></h5>
                <button id="finalizarVentaBtn" class="btn btn-success w-100" disabled 
                        data-bs-toggle="modal" data-bs-target="#ventaModal">
                    Finalizar Venta
                </button>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="content">
            <div class="categorias-container" id="categorias"></div>
            <div class="producto-container" id="productos" style="display: none;"></div>
        </div>

        <!-- Botones flotantes -->
        <button class="btn btn-dark btn-content btn-categoria" data-bs-toggle="modal" data-bs-target="#categoriaModal">
            +
        </button>
        <button class="btn btn-primary btn-content btn-producto" id="btnAgregarProducto" 
                data-bs-toggle="modal" data-bs-target="#productoModal" style="display: none;">
            +
        </button>
    </main>

    <!-- Modals -->
    <div class="modal fade" id="categoriaModal">
        <!-- Contenido del modal de categoría -->
    </div>

    <div class="modal fade" id="productoModal">
        <!-- Contenido del modal de producto -->
    </div>

    <div class="modal fade" id="cantidadModal">
        <!-- Contenido del modal de cantidad -->
    </div>

    <div class="modal fade" id="ventaModal">
        <!-- Contenido del modal de venta -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Gestión de productos seleccionados
            let productosSeleccionados = JSON.parse(localStorage.getItem('productosSeleccionados')) || [];
            
            function actualizarSidebar() {
    const tbody = document.getElementById("selectedProducts");
    const totalElement = document.getElementById("totalAmount");
    const emptyMessage = document.getElementById("emptyMessage");
    
    tbody.innerHTML = '';
    let total = 0;
    
    if (productosSeleccionados.length === 0) {
        emptyMessage.style.display = 'table-row';
        document.getElementById("finalizarVentaBtn").disabled = true;
        totalElement.textContent = '0.00';
        return;
    }
    
    emptyMessage.style.display = 'none';
    productosSeleccionados.forEach(item => {
        // Convertir precio a número
        const precio = Number(item.producto.precio);
        const subtotal = precio * item.cantidad;
        total += subtotal;
        
        const tr = document.createElement('tr');
        tr.innerHTML = `
            <td>${item.producto.nombre}</td>
            <td>$${precio.toFixed(2)}</td>
            <td>
                <div class="quantity-controls">
                    <button class="btn btn-sm btn-outline-secondary decrement">-</button>
                    <span>${item.cantidad}</span>
                    <button class="btn btn-sm btn-outline-secondary increment">+</button>
                </div>
            </td>
            <td>$${subtotal.toFixed(2)}</td>
            <td><button class="btn btn-danger btn-sm btn-eliminar">×</button></td>
        `;
        
        tr.querySelector('.decrement').addEventListener('click', () => actualizarCantidad(item.producto.id, -1));
        tr.querySelector('.increment').addEventListener('click', () => actualizarCantidad(item.producto.id, 1));
        tr.querySelector('.btn-eliminar').addEventListener('click', () => eliminarProducto(item.producto.id));
        
        tbody.appendChild(tr);
    });
    
    totalElement.textContent = total.toFixed(2);
    document.getElementById("finalizarVentaBtn").disabled = false;
    localStorage.setItem('productosSeleccionados', JSON.stringify(productosSeleccionados));
}

            function actualizarCantidad(id, cambio) {
                const index = productosSeleccionados.findIndex(item => item.producto.id === id);
                if (index >= 0) {
                    productosSeleccionados[index].cantidad += cambio;
                    if (productosSeleccionados[index].cantidad < 1) {
                        productosSeleccionados.splice(index, 1);
                    }
                    actualizarSidebar();
                }
            }

            function eliminarProducto(id) {
                productosSeleccionados = productosSeleccionados.filter(item => item.producto.id !== id);
                actualizarSidebar();
            }

            // Inicializar
            actualizarSidebar();
        });
    </script>
</body>
</html>